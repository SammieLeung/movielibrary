<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="MyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/start_waiting_bg</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textFontWeight">300</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--        <item name="android:typeface">serif</item>-->
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/new_common_dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogStyle.transparent" parent="DialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Dialog">
        <!-- 此对话框的背景-->
        <item name="android:windowIsTranslucent">true</item>
        <!--对话框是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--对话框是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--对话框无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--对话框是否浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--是否允许对话框的背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>




    <style name="folder_item_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="folder_item_small_text">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="homepage_circle_btn_style">
        <item name="android:textColor">@color/circle_btn_color_list</item>
        <item name="android:background">@drawable/circle_btn_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/homepage_circle_btn_w</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginTop">66dp</item>
        <item name="android:paddingLeft">@dimen/common_circle_btn_min_padding</item>
        <item name="android:paddingRight">@dimen/common_circle_btn_min_padding</item>
        <item name="android:drawablePadding">@dimen/common_circle_btn_drawable_padding</item>
        <item name="android:drawableTint">@color/circle_btn_color_list</item>
    </style>
    
    <style name="history_dataview_playback_progress">
        <item name="maxHeight">600dp</item>
        <item name="minHeight">600dp</item>
        <item name="android:progressDrawable">@drawable/history_dataview_progress_horizontal</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>

    </style>

    <declare-styleable name="FloatKeyboard">
        <attr name="offsetDis" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GifTextView">
        <attr name="gifDrawStart" format="reference" />
        <attr name="gifPlaceHolder" format="reference" />
        <attr name="gifDrawWidth" format="dimension" />
        <attr name="gifDrawHeight" format="dimension" />
        <attr name="gifDrawPadding" format="dimension" />
        <attr name="gifText" format="string" />
        <attr name="gifTextSize" format="dimension" />
        <attr name="gifTextColor" format="reference|color" />
        <attr name="gifTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

    </declare-styleable>
</resources>