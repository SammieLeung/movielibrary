<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="MyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/start_waiting_bg</item>
        <!--        <item name="android:typeface">serif</item>-->
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/new_common_dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogStyle.transparent" parent="DialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Dialog">
        <!-- 此对话框的背景-->
        <item name="android:windowIsTranslucent">true</item>
        <!--对话框是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--对话框是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--对话框无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--对话框是否浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--是否允许对话框的背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_checkbox_btn</item>
    </style>

    <style name="DrawTopButtonStyle">
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_marginRight">13.3dp</item>
        <item name="android:background">@drawable/t9_keybtn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:textColor">@color/selector_category_text</item>
        <item name="android:textSize">18.6sp</item>
        <item name="dtbDrawableTopSize">46dp</item>
    </style>

    <style name="folder_item_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="folder_item_small_text">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="rount_image_view_style">
        <item name="shapeAppearance">@style/RoundedStyle</item>
    </style>

    <style name="RoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="homepage_circle_btn_style">
        <item name="android:background">@drawable/circle_btn_bg</item>
        <item name="android:layout_width">@dimen/homepage_circle_btn_w</item>
        <item name="android:layout_height">@dimen/homepage_circle_btn_w</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="drawableTint">@drawable/circle_btn_icon_tint</item>

    </style>

    <declare-styleable name="FloatKeyboard">
        <attr name="offsetDis" format="dimension" />
    </declare-styleable>
</resources>