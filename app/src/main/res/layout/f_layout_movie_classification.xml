<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_empty_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:duplicateParentState="true"
            android:padding="2.5dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/tv_empty_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_add"
            android:duplicateParentState="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/tips"
            android:textColor="@color/selector_for_classification_emptytips_text"
            android:textSize="21.3sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/more_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:drawablePadding="15dp"
        android:textSize="18dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/st_episode_btn_transparent_50"
        android:drawableLeft="@mipmap/ic_videos"
        android:nextFocusLeft="@id/pos_1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/more" />

    <com.hphtv.movielibrary.view.RecyclerViewWithMouseScroll
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/more_btn"
        android:focusable="false"
        >
    </com.hphtv.movielibrary.view.RecyclerViewWithMouseScroll>

</RelativeLayout>

