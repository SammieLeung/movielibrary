<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/library_background"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <RelativeLayout
        android:id="@+id/ml_head"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:text="@string/lb_sort_directory"
            android:textColor="@color/cffffff"
            android:textSize="30sp" />



    </RelativeLayout>

    <View
        android:id="@+id/ml_divider"
        android:layout_width="1200dp"
        android:layout_height="1dp"
        android:layout_below="@id/ml_head"
        android:background="@drawable/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ml_divider"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="173.33dp"
                android:layout_height="match_parent"
                android:background="@color/usb_bg"
                android:scaleType="center"
                android:src="@mipmap/usb" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/c10ffffff" />

            <LinearLayout
                android:layout_width="920dp"
                android:layout_height="match_parent"
                android:background="@color/usb_bg"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/usb_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|bottom"
                        android:overScrollMode="always"
                        android:paddingLeft="40dp"
                        android:textColor="@color/cedf9ff"
                        android:textSize="26.7sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp">

                        <TextView
                            android:id="@+id/usb_state"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:overScrollMode="always"
                            android:paddingLeft="40dp"
                            android:text="@string/usb_state"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/usb_usablespace"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:overScrollMode="always"
                            android:paddingLeft="40dp"
                            android:text="@string/usb_usablespace"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/usb_totalspace"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:overScrollMode="always"
                            android:paddingLeft="40dp"
                            android:text="@string/usb_totalspace"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/usb_path"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:overScrollMode="always"
                            android:paddingLeft="40dp"
                            android:text="@string/usb_path"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp">

                        <TextView
                            android:id="@+id/usb_matched"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:overScrollMode="always"
                            android:paddingLeft="40dp"
                            android:text="@string/usb_matched"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/usb_unmatchable"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:overScrollMode="always"
                            android:paddingLeft="40dp"
                            android:text="@string/usb_unmatchable"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/usb_totalvideo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:overScrollMode="always"
                            android:paddingLeft="40dp"
                            android:text="@string/usb_totalvideo"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp">


            <LinearLayout
                android:layout_width="407.3dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50.7dp">

                    <Button
                        android:id="@+id/btn_scan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/st_episode_btn_2"
                        android:text="@string/scan_begin"
                        android:textColor="@color/cffffff"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/usb_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp">

                        <ImageView
                            android:id="@+id/iv_scan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="23dp"
                            android:src="@mipmap/ic_scan" />

                        <TextView
                            android:id="@+id/tx_scan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@id/iv_scan"
                            android:text="@string/scaning"
                            android:textColor="@color/cddd"
                            android:textSize="20sp" />

                        <ProgressBar
                            android:id="@+id/pb_file"
                            style="@style/my_pb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_scan"
                            android:layout_marginBottom="6.7dp"
                            android:layout_marginTop="20dp" />


                        <TextView
                            android:id="@+id/tx_scan_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pb_file"
                            android:textColor="@color/cddd"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tx_scan_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/pb_file"
                            android:textColor="@color/cddd"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="20dp">

                        <ProgressBar
                            android:id="@+id/pb_searchinfo"
                            style="@style/my_pb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6.7dp" />

                        <TextView
                            android:id="@+id/tx_search_l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pb_searchinfo"
                            android:textColor="@color/cddd"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tx_search_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/pb_searchinfo"
                            android:textColor="@color/cddd"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="20dp">

                        <ProgressBar
                            android:id="@+id/pb_matchinfo"
                            style="@style/my_pb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6.7dp" />

                        <TextView
                            android:id="@+id/tx_match_l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pb_matchinfo"
                            android:textColor="@color/cddd"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tx_match_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/pb_matchinfo"
                            android:textColor="@color/cddd"
                            android:textSize="16sp" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="666.7dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50.7dp"
                    android:background="#4d000000">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/scan_record"
                        android:textColor="@color/cffffff"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/usb_bg">

                    <ScrollView
                        android:id="@+id/sv_progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/st_detail_scroll_bg"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:id="@+id/ln_progress"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

