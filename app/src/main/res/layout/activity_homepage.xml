<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_page_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@mipmap/library_background" />

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/view_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c60000000">


                <FrameLayout
                    android:id="@+id/contentFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.hphtv.movielibrary.ui.view.VerticalViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="54dp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/open_menu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="-35dp"
                        android:padding="12dp"
                        android:focusable="true"
                        android:rotation="-180"
                        android:src="@mipmap/ic_menu_btn" />
                </FrameLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@color/c30000000"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/leftmenu_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:divider="@null"
                    android:listSelector="@drawable/st_episode_select"></ListView>
            </LinearLayout>
        </androidx.drawerlayout.widget.DrawerLayout>

        <RelativeLayout
            android:id="@+id/ml_head"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:paddingLeft="14dp"
            android:paddingRight="58dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lb_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minWidth="180dp"
                    android:text="@string/left_menu_title_homepage"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="173dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_search"
                    android:focusable="true"
                    android:textAllCaps="false"
                    android:text="@string/tx_search"
                    android:drawablePadding="12dp"
                    android:textColor="@color/tx_dbdbdb"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_view_sortbox"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_cate_bg_draw"
                android:focusable="true"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sort_device"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/lb_sort_directory"
                    android:textColor="@color/tx_fff"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/ic_spite" />
            </LinearLayout>


        </RelativeLayout>
        <View
            android:id="@+id/container_sortbox"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"/>

    </RelativeLayout>
</layout>







