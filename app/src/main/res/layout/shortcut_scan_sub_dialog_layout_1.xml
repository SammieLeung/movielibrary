<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="@dimen/shortcut_scan_subdiaolg_btn_w"
            android:paddingLeft="@dimen/shortcut_scan_subdiaolg_padding_lr"
            android:paddingRight="@dimen/shortcut_scan_subdiaolg_padding_lr"
            android:paddingTop="@dimen/shortcut_scan_subdiaolg_padding_tb"
            android:paddingBottom="@dimen/shortcut_scan_subdiaolg_padding_tb"
            android:layout_height="wrap_content"
            app:bindCheckPos="@{item.pos}"/>
    </RelativeLayout>

    <data>
        <import type="com.hphtv.movielibrary.ui.shortcutmanager.bean.ShortcutOptionsItem"/>
        <variable
            name="item"
            type="ShortcutOptionsItem" />
    </data>
</layout>