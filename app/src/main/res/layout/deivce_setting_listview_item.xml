<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:focusable="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/usb_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/folder" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@color/tx_fff"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/usb_img" />

        <!--<TextView-->
            <!--android:id="@+id/device_path"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_below="@id/device_name"-->
            <!--android:gravity="top|center_horizontal"-->
            <!--android:layout_toRightOf="@id/usb_img" />-->
    </RelativeLayout>




    <TextView
        android:id="@+id/tv_dm_video"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:textColor="@color/tx_fff"
        android:layout_weight="2"
        android:gravity="center" />

    <!--<TextView-->
        <!--android:id="@+id/tv_dm_matched"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="2"-->
        <!--android:gravity="center" />-->
    <ImageView
        android:layout_gravity="center_vertical"
        android:duplicateParentState="true"
        android:id="@+id/iv_dm_status"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="2"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:src="@mipmap/ic_p_green"
        android:gravity="center" />

    <CheckBox
        style="@style/MyCheckBoxStyle"
        android:id="@+id/cb_dm_select"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:focusable="false"
        android:layout_marginRight="44dp"
        android:text="@null" />

</LinearLayout>