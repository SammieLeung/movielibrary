<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_list_item"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sli_cover"
            android:layout_width="118.7dp"
            android:layout_height="157.3dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="33.3dp">

            <TextView
                android:id="@+id/tv_sli_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/selector_search_title_text"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/ln_rate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sli_title"
                android:layout_marginTop="13.3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb_sli_star"
                    style="@style/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginRight="10dp"
                    android:rating="3" />

                <TextView
                    android:id="@+id/tv_sli_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/title_blue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_sli_cnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/ratingsCounts"
                    android:textColor="@color/selector_search_other_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sli_abstract"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_rate"
                android:layout_marginTop="20.7dp"
                android:gravity="center_vertical"
                android:textColor="@color/selector_search_other_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sli_abstract2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sli_abstract"
                android:layout_marginTop="8dp"
                android:textColor="@color/selector_search_other_text"
                android:lineSpacingMultiplier="1.2"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
