<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="75dp"
                style="@style/homepage_head_title"
                android:id="@+id/tv_history_title"
                android:text="@string/history_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/view_history"
                android:layout_width="match_parent"
                android:layout_marginTop="23dp"
                android:layout_height="@dimen/history_container_h">
                <TextView
                    android:id="@+id/tv_history_empty_tips"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/history_list_empty"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_history_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="66dp"
                android:id="@+id/rv_genre_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/genre_container_h"/>
            <TextView
                android:layout_marginTop="59dp"
                style="@style/homepage_head_title"
                android:id="@+id/tv_recently_added"
                android:text="@string/recently_added_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recently_added"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recently_added_container_h"/>

            <TextView
                android:layout_marginTop="75dp"
                style="@style/homepage_head_title"
                android:id="@+id/tv_favorite"
                android:text="@string/recently_added_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_favorite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recently_added_container_h"/>

            <TextView
                android:layout_marginTop="75dp"
                style="@style/homepage_head_title"
                android:id="@+id/tv_recommand"
                android:text="@string/recently_added_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recently_added_container_h"/>
        </LinearLayout>


    <data>

    </data>
</layout>