<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.text.TextUtils"/>
        <import type="com.hphtv.movielibrary.roomdb.entity.Movie"/>
        <variable
            name="movie"
            type="Movie" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/fragment_unionsearch_margin"
        android:layout_height="wrap_content">
    
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/unionsearch_movie_cover_w"
            android:layout_marginRight="@dimen/fragment_unionsearch_margin"
            android:layout_height="@dimen/unionsearch_movie_cover_h"/>

        <TextView
            android:id="@+id/tv_title"
            android:text="@{movie.title}"
            android:layout_toRightOf="@id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unionsearch_movie_title_h"
            android:textSize="@dimen/unionsearch_movie_title_textsize"/>

        <TextView
            android:id="@+id/tv_subtext"
            android:text="@{movie.tag}"
            android:layout_toRightOf="@id/iv_cover"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_title"
            android:layout_height="@dimen/unionsearch_movie_subtext_h"
            android:textSize="@dimen/unionsearch_movie_title_textsize"/>

        <TextView
            android:id="@+id/tv_subtext2"
            android:layout_toRightOf="@id/iv_cover"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_subtext"
            android:layout_height="@dimen/unionsearch_movie_subtext_h"
            android:textSize="@dimen/unionsearch_movie_title_textsize"/>
    </RelativeLayout>
</layout>