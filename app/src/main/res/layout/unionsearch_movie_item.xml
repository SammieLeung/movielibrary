<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.text.TextUtils"/>
        <import type="com.hphtv.movielibrary.roomdb.entity.Movie"/>
        <variable
            name="movie"
            type="Movie" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="@dimen/fragment_unionsearch_margin"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/view_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_cover"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_poster_default"
                android:layout_width="@dimen/unionsearch_movie_cover_w"
                android:layout_height="@dimen/unionsearch_movie_cover_h"/>

            <TextView
                android:id="@+id/tv_title"
                android:text="@{movie.title}"
                android:layout_below="@id/iv_cover"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unionsearch_movie_title_h"
                android:textSize="@dimen/unionsearch_movie_title_textsize"/>
            />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:background="@color/black"
            android:id="@+id/view_top"
            android:layout_alignStart="@id/view_bottom"
            android:layout_alignEnd="@id/view_bottom"
            android:layout_alignBottom="@id/view_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_inline"
                android:text="@{movie.title}"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unionsearch_movie_title_h"
                android:textSize="@dimen/unionsearch_movie_title_textsize"/>
            <TextView
                android:id="@+id/tv_rating"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/fragment_unionsearch_margin_s"
                android:text="@{movie.ratings}"
                android:textColor="@color/title_blue"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_genres"
                android:text="@{@string/genres+movie.tag}"
                android:layout_below="@id/tv_title_inline"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unionsearch_movie_subtext_h"
                android:textSize="@dimen/unionsearch_movie_subtext_textsize"/>
            <TextView
                android:id="@+id/tv_actors"
                android:text="@{@string/actor+movie.tag2}"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_genres"
                android:layout_height="@dimen/unionsearch_movie_subtext_h"
                android:textSize="@dimen/unionsearch_movie_subtext_textsize"/>
            <TextView
                android:id="@+id/tv_pub_dates"
                android:text="@{@string/pub_dates+movie.releaseDate}"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_actors"
                android:layout_height="@dimen/unionsearch_movie_subtext_h"
                android:textSize="@dimen/unionsearch_movie_subtext_textsize"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>