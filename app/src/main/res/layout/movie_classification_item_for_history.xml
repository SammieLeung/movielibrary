<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/classifititle"
        android:layout_width="wrap_content"
        android:layout_height="106dp"
        android:layout_marginLeft="34dp"
        android:background="@drawable/base_line_for_text"
        android:gravity="center"
        android:shadowColor="@color/c15000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="1"
        android:textColor="@color/c70ffffff"
        android:textSize="58sp"></TextView>

    <ImageView
        android:id="@+id/pos_1"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_below="@id/classifititle"
        android:layout_marginLeft="34dp"
        android:background="@drawable/st_movie_select_bg"
        android:focusable="true"
        android:nextFocusDown="@id/more_btn"
        android:padding="4dp"
        android:scaleType="fitXY"

        android:src="@color/episode_btn" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@id/pos_1"
        android:layout_alignLeft="@id/pos_1"
        android:id="@+id/pos_title_group"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/pos_tips"
        android:layout_above="@+id/pos_title"
        android:layout_width="250dp"
        android:text="@string/tx_last_watch"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_height="28dp"></TextView>

    <TextView
        android:id="@id/pos_title"

        android:layout_width="250dp"
        android:text=""
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:ellipsize="end"
        android:lines="1"

        android:layout_height="28dp"></TextView>
    </LinearLayout>
