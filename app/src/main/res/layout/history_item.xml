<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_margin="30dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:gravity="center_horizontal">

            <com.lqm.roundview.RoundImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/history_w"
                android:layout_height="@dimen/history_h"
                android:background="@drawable/blue_stroke_select_bg"
                android:duplicateParentState="true"
                android:scaleType="fitXY"
                app:border_width="4dp"
                app:border_color="@android:color/transparent"
                app:corner_radius="4dp"/>

            <View
                android:duplicateParentState="true"
                android:background="@drawable/shadowline"
                android:layout_width="@dimen/history_w"
                android:layout_height="@dimen/history_h"/>

            <TextView
                android:id="@id/tv_title"
                android:layout_width="@dimen/history_w"
                android:layout_height="48dp"
                android:layout_below="@id/iv_img"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/tx_fff"
                android:textSize="18sp" />
        </RelativeLayout>


    </LinearLayout>
</layout>