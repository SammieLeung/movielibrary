<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="@{recentAdd||favorite||recommand?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="75dp"
                style="@style/homepage_head_title"
                android:id="@+id/tv_history_title"
                android:text="@string/history_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/view_history"
                android:layout_width="match_parent"
                android:layout_marginTop="13dp"
                android:layout_height="293dp">
                <TextView
                    android:id="@+id/tv_history_empty_tips"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28sp"
                    android:text="@string/history_list_empty"/>

                <com.hphtv.movielibrary.ui.view.TvRecyclerView
                    android:id="@+id/rv_history_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <com.hphtv.movielibrary.ui.view.TvRecyclerView
                android:layout_marginTop="37dp"
                android:id="@+id/rv_genre_list"
                android:layout_width="match_parent"
                android:layout_height="153dp"/>
            <TextView
                android:visibility="@{recentAdd?View.VISIBLE:View.GONE}"
                android:layout_marginTop="47dp"
                style="@style/homepage_head_title"
                android:id="@+id/tv_recently_added"
                android:text="@string/recently_added_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.hphtv.movielibrary.ui.view.TvRecyclerView
                android:visibility="@{recentAdd?View.VISIBLE:View.GONE}"
                android:layout_marginTop="@dimen/homepage_video_rv_margin_top"
                android:id="@+id/rv_recently_added"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recently_added_container_h"/>

            <TextView
                android:visibility="@{favorite?View.VISIBLE:View.GONE}"
                android:layout_marginTop="@dimen/homepage_title_margin_top"
                style="@style/homepage_head_title"
                android:id="@+id/tv_favorite"
                android:text="@string/my_favorite_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.hphtv.movielibrary.ui.view.TvRecyclerView
                android:visibility="@{favorite?View.VISIBLE:View.GONE}"
                android:layout_marginTop="@dimen/homepage_video_rv_margin_top"
                android:id="@+id/rv_favorite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recently_added_container_h"/>

            <TextView
                android:visibility="@{recommand?View.VISIBLE:View.GONE}"
                android:layout_marginTop="@dimen/homepage_title_margin_top"
                style="@style/homepage_head_title"
                android:id="@+id/tv_recommand"
                android:text="@string/recommand_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.hphtv.movielibrary.ui.view.TvRecyclerView
                android:visibility="@{recommand?View.VISIBLE:View.GONE}"
                android:layout_marginTop="@dimen/homepage_video_rv_margin_top"
                android:id="@+id/rv_recommand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recently_added_container_h"/>
        </LinearLayout>
        <RelativeLayout
            android:visibility="@{!(recentAdd||favorite||recommand)?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="165dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_empty"
                android:src="@mipmap/empty_img"
                android:layout_width="158dp"
                android:layout_height="131dp"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_below="@id/iv_empty"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_empty_tips_1"
                android:text="@string/homepage_empty"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:focusedByDefault="true"
                android:id="@+id/btn_quick_add_shortcut"
                style="@style/common_content_s_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_empty_tips_1"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                android:background="@drawable/new_common_spinner_bg"
                android:padding="15dp"
                android:text="@string/homepage_goto_add_shortcut" />
        </RelativeLayout>
    </RelativeLayout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="recentAdd"
            type="boolean" />
        <variable
            name="favorite"
            type="boolean" />
        <variable
            name="recommand"
            type="boolean" />
    </data>
</layout>