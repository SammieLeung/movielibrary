<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/keybtn_item_width"
    android:layout_height="@dimen/keybtn_item_width"
    android:background="@drawable/st_bg_layout_setting_btn"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kbi_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textColor="@color/tx_E0E0E0"
            android:gravity="bottom|center_horizontal"
            android:textSize="28sp"
            />

        <TextView
            android:id="@+id/kbi_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textColor="@color/tx_E0E0E0"
            android:gravity="top|center_horizontal"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/kbi_single_num"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="28sp"
        android:textColor="@color/tx_E0E0E0"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/kbi_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center" />
</FrameLayout>