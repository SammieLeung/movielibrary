<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/circle_item_len"
            android:layout_height="@dimen/circle_item_len"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/circle_item_margin"
            android:layout_marginRight="@dimen/circle_item_margin"
            android:background="@drawable/circle_item_bg"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="@{title}" />

    </RelativeLayout>

    <data>

        <variable
            name="title"
            type="String" />
    </data>
</layout>