<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="@dimen/image_btn_wh"
                    android:layout_height="@dimen/image_btn_wh"/>
                <ImageButton
                    android:id="@+id/btn_folder_manager"
                    android:layout_width="@dimen/image_btn_wh"
                    android:layout_height="@dimen/image_btn_wh"/>
                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="@dimen/image_btn_wh"
                    android:layout_height="@dimen/image_btn_wh"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_history_title"
                android:text="@string/history_list_title"
                android:layout_marginBottom="@dimen/history_title_margin_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/view_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_container_h">

                <TextView
                    android:id="@+id/tv_history_empty_tips"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/history_list_empty"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_history_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_category_title"
                android:text="@string/category_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category_list"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_container_h"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_genre_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/genre_container_h"/>
            <TextView
                android:id="@+id/tv_recently_added"
                android:text="@string/recently_added_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recently_added"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recently_added_container_h"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <data>

    </data>
</layout>