        <shape android:shape="oval">
            <stroke android:color="@color/c1c9bbe" android:width="2dp"></stroke>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="oval">
            <stroke android:color="@color/c1c9bbe" android:width="2dp"></stroke>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
