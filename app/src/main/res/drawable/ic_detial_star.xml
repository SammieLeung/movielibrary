<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <item app:isFavorite="false">
        <selector>
            <item android:state_focused="true">
                <bitmap android:src="@mipmap/ic_detail_star_f"></bitmap>
            </item>
            <item android:state_hovered="true">
                <bitmap android:src="@mipmap/ic_detail_star_f"></bitmap>
            </item>
            <item>
                <bitmap android:src="@mipmap/ic_detail_star"></bitmap>
            </item>
        </selector>
    </item>
    <item app:isFavorite="true">
        <selector>
            <item android:state_focused="true">
                <bitmap android:src="@mipmap/ic_detail_stared"></bitmap>
            </item>
            <item android:state_hovered="true">
                <bitmap android:src="@mipmap/ic_detail_stared"></bitmap>
            </item>
            <item>
                <bitmap android:src="@mipmap/ic_detail_stared"></bitmap>
            </item>
        </selector>
    </item>
</selector>