<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/c27bbfa" />
            <stroke android:width="4dp" android:color="@color/c167c98" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <solid android:color="@color/c1c9bbe" />
            <stroke android:width="4dp" android:color="@color/c167c98" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/c1c9bbe" />
            <stroke android:width="4dp" android:color="@color/c167c98" />
        </shape>
    </item>

    <item android:drawable="@color/c1a1f28"></item>
</selector>