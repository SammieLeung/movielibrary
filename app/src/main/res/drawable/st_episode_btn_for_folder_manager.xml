<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:color="@color/c_list_select_333" android:width="2dp"/>
            <solid android:color="@color/c_list_222324"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/c167c98"></solid>
                    <corners android:radius="2dp"></corners>
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape>
                    <solid android:color="@color/c27bbfa"></solid>
                    <corners android:radius="2dp"></corners>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/c167c98"></solid>
                    <corners android:radius="2dp"></corners>
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape>
                    <solid android:color="@color/c1c9bbe"></solid>
                    <corners android:radius="2dp"></corners>
                </shape>
            </item>
        </layer-list>


    </item>

    <item>
        <shape>
            <solid android:color="@color/c_list_select_333"></solid>
            <corners android:radius="2dp"></corners>
        </shape>
    </item>
</selector>