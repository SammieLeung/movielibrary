<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/btn_edit"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toStartOf="@id/btn_remove"
            motion:layout_constraintStart_toEndOf="@id/btn_favorite"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/btn_remove"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toStartOf="@id/btn_expand"
            motion:layout_constraintStart_toEndOf="@id/btn_edit"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/btn_play"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toStartOf="@id/btn_favorite"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/btn_favorite"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toStartOf="@id/btn_edit"
            motion:layout_constraintStart_toEndOf="@id/btn_play"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/btn_expand"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/btn_remove"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/btn_edit"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toStartOf="@id/btn_remove"
            motion:layout_constraintStart_toEndOf="@id/btn_favorite"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/btn_remove"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toStartOf="@id/btn_expand"
            motion:layout_constraintStart_toEndOf="@id/btn_edit"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/btn_expand"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/btn_remove"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/btn_play"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toStartOf="@id/btn_favorite"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/btn_favorite"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:layout_marginRight="23dp"
            motion:layout_constraintEnd_toStartOf="@id/btn_edit"
            motion:layout_constraintStart_toEndOf="@id/btn_play"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>